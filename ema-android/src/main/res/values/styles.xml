<resources>

    <!-- Base application theme. -->
    <style name="EmaAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/emaBlue</item>
        <item name="colorPrimaryDark">@color/emaBlueDark</item>
        <item name="colorAccent">@color/emaRed</item>
        <item name="emaActionBarStyle">@style/EmaActionBarStyle</item>
        <item name="emaAppBarLayoutStyle">@style/EmaAppBarLayoutStyle</item>
    </style>

    <style name="EmaTheme.NoActionBar" parent="EmaAppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EmaActionBarStyle">
        <item name="android:background">@color/emaBlue</item>
        <item name="titleTextColor">@color/emaWhite</item>
        <item name="subtitleTextColor">@color/emaWhite</item>
    </style>

    <style name="EmaAppBarLayoutStyle">
        <item name="android:background">@color/emaBlue</item>
    </style>

</resources>
