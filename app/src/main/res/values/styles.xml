<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_button_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_min_height_lda</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">@dimen/icon_size_huge</item>
    </style>

    <style name="ButtonRed" parent="Button">
        <item name="android:background">@drawable/shape_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonGreen" parent="Button">
        <item name="android:background">@drawable/shape_button_green</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ButtonWhite" parent="Button">
        <item name="android:background">@drawable/shape_button_white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DialogTitle" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/letter_big_huge</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
    </style>

    <style name="DialogMessage" parent="Text">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textSize">@dimen/letter_big</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium" parent="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/letter_small_medium</item>
    </style>

    <style name="TextHugeTitle" parent="Text">
        <item name="android:textSize">@dimen/letter_very_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/space_medium</item>
        <item name="android:background">@drawable/shape_edittext_box</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextUser" parent="EditText">
        <item name="android:layout_marginTop">@dimen/space_big_medium</item>
    </style>

    <style name="EditTextPasswordHome" parent="EditText">
        <item name="android:layout_marginTop">@dimen/space_small_medium</item>
        <item name="android:inputType">textPassword</item>
    </style>

</resources>
